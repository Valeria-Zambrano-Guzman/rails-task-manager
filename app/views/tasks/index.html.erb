<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
  <% end %>
</ul>
<%= link_to "Add a new task", tasks_new_path %>
<%= link_to "Delete",
            delete_task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>


 


